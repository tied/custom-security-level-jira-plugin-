$webResourceManager.requireResourcesForContext("csl-admin")
<html>
   <head>
      <title>$action.getText('csl.admin.title')</title>
      <meta name="decorator" content="atl.admin" />
      <meta name="admin.active.section" content="admin_plugins_menu/csl_admin_section"/>
      <meta name="admin.active.tab" content="csl_config"/>
   </head>
   <body>
      <!-- Div to display the different messages successes/errors/etc. -->
      <div id="messages"></div>
      <div id="sucess-messages" class="message"></div>
      <button class="aui-button" id="btn-add-customsecurity-lvl">
      <span class="aui-icon aui-icon-small aui-iconfont-add">View</span>Ajouter
      </button>
      <form action="ConfigureCSL!save.jspa" id="admin-form" class="aui">
       <h1>Custom Security Level</h1>
	   <h2>Configuration</h2>
	   <div class="aui-group">
			<div class="aui-item right">
				<label for="active">Active</label>
			</div>
			<div class="aui-item">
				<input class="checkbox" type="checkbox" id="active" value="true" name="active" #if ($action.getConfiguration().getActive()) checked #end>
			</div>
			<div class="aui-item">
			</div>
			<div class="aui-item">
			</div>
		</div>
		
		<hr>	
		
		#foreach ($rule in $action.getSecurityRules())
			<h2>Nom de la règle : $rule.name </h2>
			<div class="aui-group ">
				<div class="aui-item right">
					<label for="text-input">Active</span></label>
				</div>
				<div class="aui-item">
					<span class="aui-icon aui-icon-small aui-iconfont-devtools-task-disabled"></span> 
				</div>
				<div class="aui-item">
				</div>
				<div class="aui-item right">
				
				</div>
			</div>
			 <div class="aui-group">
				<div class="aui-item right">
					<label for="text-input">Date de création</span></label>
				</div>
				<div class="aui-item">
					<span>$rule.creationDate</span>
					<div class="description">Date de création de la règle</div>
				</div>
				<div class="aui-item">
				</div>
				<div class="aui-item right">
					<span class="aui-icon aui-icon-large aui-iconfont-edit" onclick="javascript:AJS.dialog2('#edit-dialog').show();" ></span>
				</div>
			</div>
		   <div class="aui-group">
				<div class="aui-item right">
					<label for="text-input">Créateur</span></label>
				</div>
				<div class="aui-item">
					<span>$rule.creationUser</span>
					<div class="description">Créateur de la règle</div>
				</div>
				<div class="aui-item">
				</div>
				<div class="aui-item right">
					<span class="aui-icon aui-icon-large aui-iconfont-delete" id="delete-sr-$rule.id" data-id="$rule.id" data-name="$rule.name"  ></span>
				</div>
			</div>
			
			 <div class="aui-group ">
				<div class="aui-item right">
					<label for="text-input">JQL</span></label>
				</div>
				<div class="aui-item">
					<span>$rule.jql</span>
					<div class="description">La requête JQL appliqué à l'évenement</div>
				</div>
				<div class="aui-item">
				</div>
				<div class="aui-item right">
				</div>
			</div>
			
				<div class="aui-group ">
					<div class="aui-item right">
						<label for="text-input">Evenements</span></label>
					</div>
					<div class="aui-item">
						<span> #foreach ($event in $rule.getEvents()) 
							$event.jiraEventName ($event.jiraEventId) | 
						#end</span>
						<div class="description">La liste des evenements</div>
					</div>
					<div class="aui-item">
					</div>
					<div class="aui-item right">
						
					</div>
				</div>
		  <hr>	
		#end
		 
         <div class="buttons-container">
            <div class="buttons">
               <input class="aui-button aui-button-primary" type="submit" value="Enregistrer" id="save-button">
            </div>
         </div>
      </form>	  
      <section role="dialog" id="add-dialog" class="aui-layer aui-dialog2 aui-dialog2-medium" aria-hidden="true">
         <!-- Dialog header -->
         <header class="aui-dialog2-header">
            <!-- The dialog's title -->
            <h2 class="aui-dialog2-header-main">Ajouter nouvelle règle</h2>
            <a class="aui-dialog2-header-close">
            <span class="aui-icon aui-icon-small aui-iconfont-close-dialog">Close</span>
            </a>
         </header>
         <div class="aui-dialog2-content">
            <form id="add-form" class="aui">
				<div class="field-group">
                  <label for="rule-active">Active</label>
                  <input class="checkbox" type="checkbox" id="active" value="false" name="active" >
                  <div class="description">Active</div>
               </div>
            	<div class="field-group">
                  <label for="rule-name">Nom regle</label>
                  <input class="text medium-field" type="text" id="rule-name" name="rule-name" >
                  <div class="description">Nom de la règle</div>
               </div>
               <div class="field-group">
                  <label for="events">Evenements<span class="aui-icon icon-required">(required)</span></label>
                  <select id="events" multiple>
                     <option value="10000">Création</option>
                     <option value="10001">Mise à  jour</option>
                     <option value="10002">Evenement lancée</option>
					 #foreach ($eventType in $action.getEventTypes())
						<option value="$eventType.getId()">$eventType.getName()</option>            
					 #end
                  </select>
                  <div class="description">Liste Evenements sur lequel s'applique la règle</div>
               </div>
               <div class="field-group">
                  <label for="jql">Requete JQL<span class="aui-icon icon-required">(required)</span></label>
                  <input class="text long-field" type="text" id="jql" name="jql" >
                  <div class="description">La requete JQL pour selectionner la population cible de clients</div>
               </div>
               <div class="field-group">
                  <label for="security-lvl">Security Level<span class="aui-icon icon-required">(required)</span> </label>
                  <select id="security-lvl" >
					#foreach ($securityLvl in $action.getLevelList())
						<option value="$securityLvl.getId()">$securityLvl.getName()</option>            
					 #end
                  </select>
                  <div class="description">Niveau de sécurité</div>
               </div>
            	<div class="field-group">
                  <label for="priority">Priorité</label>
                  <input class="text short-field" type="text" id="priority" name="priority" >
                  <div class="description">Plus la priorité est élévé, plus la rêgle sera prédominante sur les autres</div>
               </div>
               <div class="buttons-container">
                  <div class="buttons">
                     <input class="aui-button aui-button-primary" type="submit" value="Enregistrer" id="save-button">
                  </div>
               </div>
            </form>
			
         </div>
      </section>
   </body>
</html>