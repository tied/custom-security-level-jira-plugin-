 <section role="dialog" id="edit-dialog" class="aui-layer aui-dialog2 aui-dialog2-medium" aria-hidden="true">
		   <!-- Dialog header -->
		   <header class="aui-dialog2-header">
		      <!-- The dialog's title -->
		      <h2 class="aui-dialog2-header-main">Edit règle</h2>
		      <a class="aui-dialog2-header-close">
		      <span class="aui-icon aui-icon-small aui-iconfont-close-dialog">Close</span>
		      </a>
		   </header>
		   <div class="aui-dialog2-content">
		      <form id="add-form" class="aui">
		         <div class="field-group">
		            <label for="edit-rule-active">Active</label>
		            <input class="checkbox" type="checkbox" id="edit-rule-active" name="edit-rule-active" >
		            <div class="description">Active</div>
		         </div>
		         <div class="field-group">
		            <label for="edit-rule-name">Nom regle</label>
		            <input class="text medium-field" type="text" id="edit-rule-name" name="edit-rule-name" >
		            <div class="description">Nom de la règle</div>
		         </div>
		         <div class="field-group">
		            <label for="events">Evenements<span class="aui-icon icon-required">(required)</span></label>
		            <select id="edit-events" multiple>
		               #foreach ($eventType in $action.getEventTypes())
		               <option value="$eventType.getId()">$eventType.getName()</option>
		               #end
		            </select>
		            <div class="description">Liste Evenements sur lequel s'applique la règle</div>
		         </div>
		         <div class="field-group">
		            <label for="edit-jql">Requete JQL<span class="aui-icon icon-required">(required)</span></label>
		            <input class="text long-field" type="text" id="edit-jql" name="edit-jql" >
		            <div class="description">La requete JQL pour selectionner la population cible de clients</div>
		         </div>
		         <div class="field-group">
		            <label for="edit-security-lvl">Security Level<span class="aui-icon icon-required">(required)</span> </label>
		            <select id="edit-security-lvl" >
		               #foreach ($securityLvl in $action.getLevelList())
		               <option value="$securityLvl.getId()">$securityLvl.getName()</option>
		               #end
		            </select>
		            <div class="description">Niveau de sécurité</div>
		         </div>
		         <div class="field-group">
		            <label for="edit-priority">Priorité</label>
		            <input class="text short-field" type="text" id="edit-priority" name="edit-priority" >
		            <div class="description">Plus la priorité est élévé, plus la rêgle sera prédominante sur les autres</div>
		         </div>
		         <div class="buttons-container">
		            <div class="buttons">
		               <input class="aui-button aui-button-primary" type="submit" value="Modifier" id="save-button">
		            </div>
		         </div>
		      </form>
		   </div>
		</section>