 <section role="dialog" id="activate-dialog" class="aui-layer aui-dialog2 aui-dialog2-medium" aria-hidden="true">
		   <!-- Dialog header -->
		   <header class="aui-dialog2-header">
		      <!-- The dialog's title -->
		      <h2 class="aui-dialog2-header-main">
					$action.getText('csl.admin.securityrule.activate.popup.title')
			  </h2>
		      <a class="aui-dialog2-header-close">
		      <span class="aui-icon aui-icon-small aui-iconfont-close-dialog">Close</span>
		      </a>
		   </header>
		   <div class="aui-dialog2-content">
		   
		     <div id="activate-form-error" class="aui-message aui-message-error hide">
			    <p class="title">
			        <strong>$action.getText('csl.admin.securityrule.activate.popup.error.title')</strong>
			    </p>
			    <p></p>
			</div>
		   
		      <form id="activate-form" class="aui">
		         <div class="field-group">
		            <label for="activate-application-date">$action.getText('csl.admin.securityrule.activate.applicationdate.label') <span class="aui-icon icon-required"></label>
		            <input class="aui-date-picker" id="activate-application-date" type="date"  min="2018-01-01" />
		            <input type="text" id="activate-application-date-time" name="activate-application-date-time" class="timepicker short-field"/>
		            <div class="description">$action.getText('csl.admin.securityrule.activate.applicationdate.descr') </div>
		         </div>
		        
		         <div class="buttons-container">
		            <div class="buttons">
		               <input class="aui-button aui-button-primary" type="submit" value="$action.getText('csl.admin.securityrule.activate.save.label')" id="save-button">
		               <span id="activate-loading" class="aui-icon aui-icon-wait"></span>
		            </div>
		         </div>
		         
		         <input type="hidden" id="activate-rule-id" name="activate-rule-id" >
		      </form>
		   </div>
		</section>